<% if users.any? %>
  <ul class = "list-unstyled">
    <% users.each do |user| %>
    <!--bootstrapの実装はブラウザで画面表示ができる様になってから-->
      <li class ="media">
        <img class = "mr-2 rounded" src = "<%= gravatar_url(user, { size:50 }) %>">
        <div class = "media-body">
          <div>
            <%= user.name %>
          </div>
          <div>
            <p><%= link_to 'View Profile', user_path(user) %></p>
          </div>
        </div>
        
      </li>
    <% end %>
  </ul>
  <%= paginate users %>
<% end %>